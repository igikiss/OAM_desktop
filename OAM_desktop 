from PyQt5.QtWidgets import QApplication, QWidget, QPushButton, QToolTip, QMessageBox, QDesktopWidget, QMainWindow, QAction, qApp, QTextEdit, QLabel, QGridLayout
from PyQt5.QtGui import QIcon, QFont, QPixmap, QCursor
from PyQt5 import QtCore, QtGui
import sys

app = QApplication(sys.argv)
window = QWidget()
window.setWindowTitle("OAM Viewer")
window.setStyleSheet("background-color: white;")
window.setFixedSize(800, 600)

grid = QGridLayout()
window.setLayout(grid)

image = QPixmap("Vap_logo.png")
logo = QLabel()
logo.setPixmap(image)
logo.setAlignment(QtCore.Qt.AlignCenter)
logo.setStyleSheet('border: 1px solid black;')
grid.addWidget(logo, 0, 0)




window.show()
sys.exit(app.exec_())


